<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        app:title="Data Makanan Halal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="#B7B7B7"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/input_data"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/add"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textStyle="bold"
                android:text="Input Data"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/tampil_data"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/vieew"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textStyle="bold"
                android:text="Tampil Data"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/keluar"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/exiit"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="bold"
                android:text="Keluar"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="About"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:text="Created by : Seta Murdha Pamungkas\nStudent Number 18650043\nTaught by Mr. Supriyono"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="UIN Maulana Malik Ibrahim Malang"/>

</LinearLayout>